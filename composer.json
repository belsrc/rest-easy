{
    "name": "belsrc/rest-easy",
    "description": "A simple library to make restful curl requests",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/belsrc/rest-easy",
    "keywords": ["curl", "REST", "restful"],
    "authors": [
        {
            "name": "Bryan Kizer",
            "email": "bryan@bryanckizer.com"
        }
    ],
    "support": {
      "issues": "https://github.com/belsrc/rest-easy/issues"
    },
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": ">=4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "pdepend/pdepend" : "1.1.*",
        "sebastian/phpcpd": "1.4.*"
    },
    "autoload": {
        "psr-4": {
            "Belsrc\\RestEasy\\": "src/"
        }
    },
    "minimum-stability": "stable"
}
